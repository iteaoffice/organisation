{
  "name": "iteaoffice/organisation",
  "type": "library",
  "license": "proprietary",
  "description": "Code to manage organisations",
  "keywords": [
    "organisation"
  ],
  "homepage": "https://itea3.org",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.itea4.org"
    }
  ],
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea3.org"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.4",
    "zendframework/zend-mvc": "^3.0.1"
  },
  "require-dev": {
    "iteaoffice/testing": "^1.2",
    "iteaoffice/search": "1.*",
    "iteaoffice/contact": "^4.1",
    "iteaoffice/general": "^4.1",
    "iteaoffice/program": "^4.1",
    "iteaoffice/affiliation": "^4.1",
    "iteaoffice/project": "^4.1",
    "iteaoffice/event": "^4.1",
    "iteaoffice/invoice": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "Organisation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OrganisationTest\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.0.x-dev",
      "dev-develop": "4.1.x-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@phpstan",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint module",
    "phpstan": "./vendor/bin/phpstan analyse src/ --level=1",
    "cs": "./vendor/bin/phpcs -n -p --standard=PSR2 --extensions=php,twig src",
    "cbf": "./vendor/bin/phpcbf src --standard=PSR2",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src",
    "test": "./vendor/bin/phpunit"
  }
}
