{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-view-parent-status-%s")|format(status)) %}

<h1 class="display-4">{{ translate("txt-view-parent-status-%s")|format(status) }} {{ parentStatusLink(status, 'edit','button') }}</h1>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-status") }}</dt>
    <dd>{{ status.status }}</dd>
    <dt>{{ translate("txt-description") }}</dt>
    <dd>{{ status.description }}</dd>
</dl>

{% if status.parent.count() > 0 %}
    <table class="table table-hover table-striped table-condensed table-sm">
        <thead>
        <tr>
            <th>{{ translate("txt-legal-name") }}</th>
            <th>{{ translate("txt-organisation") }}</th>
            <th>{{ translate("txt-representative") }}</th>
            <th>{{ translate("txt-parent-organisations") }}</th>
        </tr>
        </thead>
        <tbody>
        {% for parent in status.parent %}
            <tr>
                <td>{{ parentLink(parent, 'view','parent') }}</td>
                <td>{{ organisationLink(parent.organisation,'view-admin','name') }}</td>
                <td>{{ contactLink(parent.contact,'view-admin','name') }}</td>
                <td>{{ parent.parentOrganisation.count() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}

