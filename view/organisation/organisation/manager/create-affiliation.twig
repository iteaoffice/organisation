{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-add-organisation-%s-to-project")|format(organisation)) %}

<h1>{{ translate("txt-add-organisation-%s-to-project")|format(organisation) }} </h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-organisation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ organisation }}</p>
    </div>
</div>

{{ ztbformelement(form.get('project')) }}
{{ ztbformelement(form.get('branch')) }}
{{ contactformelement(form.get('contact')) }}


<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('csrf')) }}
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
