{% do headTitle().append(translate("txt-inactive-organisations")) %}

<h1>{{ translate("txt-inactive-organisations") }}</h1>

{% if inactiveOrganisations|length > 0 %}
    <table class="table table-hover table-striped table-sm">
        <thead>
        <tr>
            <th>{{ translate("txt-id") }}</th>
            <th>{{ translate("txt-organisation-name") }}</th>
            <th>{{ translate("txt-organisation-type") }}</th>
            <th>{{ translate("txt-country") }}</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <td colspan="4"></td>
        </tr>
        </tfoot>
        <tbody>
        {% for organisation in inactiveOrganisations %}
            <tr>
                <td><small class="text-muted">{{ organisation.id }}</small></td>
                <td>
                    <a href="{{ url('zfcadmin/organisation/details/general',{'id':organisation.id}) }}">{{ organisation.organisation }}</a>
                </td>
                <td>{{ organisation.type }}</td>
                <td>{{ organisation.country.iso3 }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-no-inactive-organisations-could-be-found"))|raw }}
{% endif %}