{% do headTitle().append(translate("txt-upload-parent-doa-title")) %}

<h1>{{ translate("txt-replace-doa-for-parent-%s")|
    format(doa.parent)|raw }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-parent") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ parentLink(doa.parent, 'view', 'parent') }}</p>
    </div>
</div>

{{ lbs5formelement(form.get('dateSigned')) }}
{{ lbs5formelement(form.get('dateApproved')) }}
{{ lbs5formelement(form.get('program')) }}
{{ contactformelement(form.get('contact')) }}

{% if not doa.object.isEmpty() %}
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">{{ translate("txt-download-current-doa") }}</label>

        <div class="col-sm-9">
            <p class="form-control-plaintext">{{ parentDoaLink(doa,'download','text') }}</p>
        </div>
    </div>
{% endif %}
{{ lbs5formelement(form.get('file')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('csrf')) }}
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('delete')) }}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}