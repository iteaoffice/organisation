{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-add-organisation-parent-%s")|format(parent)) %}

<h1>{{ translate("txt-add-organisation-to-parent-%s")|format(parent) }} </h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-parent") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ parentLink(parent,'view','parent') }}</p>
    </div>
</div>

{{ organisationformelement(form.get('organisation')) }}
{{ contactformelement(form.get('contact')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
