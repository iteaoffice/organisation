{% do headTitle().append(translate("txt-parent-list-no-member-no-doa")) %}

{{ form().closeTag()|raw }}

{% do form.prepare() %}

{{ form().openTag(form)|raw }}

{% set filter = form.get('filter') %}


<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-12">

        <h1 class="display-4">{{ translate("txt-parent-list-no-member-no-doa") }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-parent-list-no-member-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <span class="input-group-btn">{{ formelement(form.get('submit')) }}</span></div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-condensed table-sm">
                <thead>
                <tr>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/parent/list-no-member', 'criteria': 'name', 'text': translate('txt-name')} %}</a></th>

                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/parent/list-no-member', 'criteria': 'country', 'text': translate('txt-country')} %}</a></th>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/parent/list-no-member', 'criteria': 'type', 'text': translate('txt-type')} %}</a></th>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/parent/list-no-member', 'criteria': 'status', 'text': translate('txt-status')} %}</a></th>
                    <th>{{ translate('txt-projects') }}</th>
                    <th>{{ translate("txt-contact") }}</th>
                    <th>{{ translate("txt-address") }}</th>
                </tr>
                </thead>
                <tfoot>
                </tfoot>
                <tbody>
                {% for parent in paginator.getCurrentItems() %}

                    {% set address = contactService.getMailAddress(parent.contact) %}

                    <tr>
                        <td>{{ parentLink(parent, 'view', 'parent') }} {{ parentLink(parent, 'edit', 'icon') }}</td>

                        <td>{{ countryLink(parent.organisation.country,'view-admin','iso3') }}</td>
                        <td>{{ parentTypeLink(parent.type,'view', 'type') }}</td>
                        <td>{{ parentStatusLink(parent.status,'view', 'status') }}</td>
                        <td>
                            {% for organisation in parent.parentOrganisation %}
                                {% for affiliation in organisation.affiliation %}
                                    {{ projectLink(affiliation.project,'view-admin','name') }}  {{ affiliationLink(affiliation,'view-admin','icon') }}
                                {% endfor %}
                            {% endfor %}
                        </td>
                        <td>{{ contactLink(parent.contact,'view-admin','name') }} <a
                                    href="mailto:{{ parent.contact.email }}"><i class="fa fa-envelope-o"></i></a></td>
                        <td>{% if address %}{{ address.address }}<br>{{ address.zipCode }} {{ address.city }}
                                <br>{{ address.country }}{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% include 'organisation/partial/pagination-control' %}

            <a href="{{ url('zfcadmin/parent/list-no-member-export',{'encodedFilter': encodedFilter}) }}" class="btn btn-primary btn-sm"><i
                        class="fa fa-file-excel-o"></i> {{ translate("txt-export-csv") }}</a>
            <small>({{ translate("txt-export-parents-based-on-filter-explanation") }})</small>
        {% else %}
            {{ ztbalert().info(translate("txt-no-parent-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-12">
        <div class="well well-sm">
            <fieldset>
                {{ ztbformelement(filter.get('status')) }}
                {{ ztbformelement(filter.get('type')) }}
                {{ ztbformelement(filter.get('program')) }}

                <div class="form-group">
                    {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
                </div>
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}
