{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-view-parent-%s")|format(parent)) %}

<h1>{{ translate("txt-view-parent-%s")|format(parent) }}</h1>

<div role="tabpanel">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#general" aria-controls="general" role="tab"
                                                  data-toggle="tab">{{ translate("txt-general") }}</a></li>
        <li role="presentation"><a href="#organisation" aria-controls="organisation" role="tab"
                                   data-toggle="tab">{{ translate("txt-organisations") }}</a></li>
        <li role="presentation"><a href="#doa" aria-controls="doa" role="tab"
                                   data-toggle="tab">{{ translate("txt-doa") }}</a></li>
        <li role="presentation"><a href="#financial" aria-controls="financial" role="tab"
                                   data-toggle="tab">{{ translate("txt-financial") }}</a></li>


    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active"
             id="general">{% include 'organisation/parent/tab/general' %}</div>
        <div role="tabpanel" class="tab-pane"
             id="organisation">{% include 'organisation/parent/tab/organisation' %}</div>
        <div role="tabpanel" class="tab-pane"
             id="doa">{% include 'organisation/parent/tab/doa' %}</div>
        <div role="tabpanel" class="tab-pane"
             id="financial">{% include 'organisation/parent/tab/financial' %}</div>

    </div>
</div>