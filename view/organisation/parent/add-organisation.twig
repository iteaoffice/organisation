{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-add-organisation-parent-%s")|format(parent)) %}

<h1 class="display-4">{{ translate("txt-add-organisation-to-parent-%s")|format(parent) }} </h1>


{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}
{% do form.setAttribute('action','') %}

{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-parent") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ parentLink(parent,'view','parent') }}</p>
    </div>
</div>

{{ organisationformelement(form.get('organisation')) }}
{{ contactformelement(form.get('contact')) }}

<div class="form-group row">
    <div class="offset-md-3 col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
