{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-parent-organisation")) %}

<h1>{{ translate("txt-edit-parent-organisation") }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set organisation = form.get('organisation_entity_parent_organisation') %}

{{ lbs5formelement(organisation.get('id')) }}
{{ parentformelement(organisation.get('parent')) }}
{{ organisationformelement(organisation.get('organisation')) }}
{{ contactformelement(organisation.get('contact')) }}
{{ formelement(form.get('csrf')) }}


<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('submit')) }}
        {% if form.has('delete') %}
            {{ lbs5formelement(form.get('delete')) }}
        {% endif %}
        {{ lbs5formelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}

