{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-parent-organisation")) %}

<h1 class="display-4">{{ translate("txt-edit-parent-organisation") }}</h1>

{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

{% set organisation = form.get('organisation_entity_parent_organisation') %}

{{ ztbformelement(organisation.get('id')) }}
{{ ztbformelement(organisation.get('parent')) }}
{{ organisationformelement(organisation.get('organisation')) }}
{{ contactformelement(organisation.get('contact')) }}


<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}

