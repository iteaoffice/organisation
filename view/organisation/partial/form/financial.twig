{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

{% set financialForm = form.get('organisation_entity_financial') %}

{{ ztbformelement(financialForm.get('id')) }}

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-debtor-number") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ organisationService.parseDebtorNumber(organisation) }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-credit-number") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ organisationService.parseCreditNumber(organisation) }}</p>
    </div>
</div>


{{ ztbformelement(financialForm.get('vat')) }}
{{ ztbformelement(financialForm.get('vatStatus')) }}

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-vat-status") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static"><span id="vatStatus_{{ financial.id }}">{{ translate(financial.vatStatus(true)) }}
                ({{ financial.dateVat|string_date }})</span>
        {#<i class="fa fa-refresh checkVat cursor-pointer" rel="{{ financial.id }}"></i></p>#}
    </div>
</div>

{{ ztbformelement(form.get('vatType')) }}
{{ ztbformelement(financialForm.get('omitContact')) }}
{{ ztbformelement(financialForm.get('iban')) }}
{{ ztbformelement(financialForm.get('bic')) }}
{{ ztbformelement(financialForm.get('supplierNumber')) }}
{{ ztbformelement(financialForm.get('requiredPurchaseOrder')) }}
{{ ztbformelement(financialForm.get('email')) }}


<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
