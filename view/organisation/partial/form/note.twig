{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set noteForm = form.get('organisation_entity_note') %}

    {{ lbs5formelement(noteForm.get('source')) }}
    {{ lbs5formelement(noteForm.get('note')) }}
    {{ lbs5formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ lbs5formelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
