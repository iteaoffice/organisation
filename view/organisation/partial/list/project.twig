<h2>{{ translate("txt-organisation-project-list") }}</h2>

<div class="row">
    {% for projectService in projects %}
        <div class="col-sm-6 col-md-12">
            <div class="thumbnail">

                {{ projectLogo(projectService) }}

                <div class="caption">
                    <h3>{{ projectLink(projectService,'view') }}</h3>

                    <p>{{ projectService.project.description }}</p>

                    <dl class="dl-horizontal">
                        <dt>{{ translate("program-call") }}</dt>
                        <dd>{{ project }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    {% endfor %}
</div>