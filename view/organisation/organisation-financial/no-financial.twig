{% do headTitle().append(translate("txt-organisation-financial-list")) %}

{% do form.prepare() %}

{{ form().openTag(form)|raw }}

{% set filter = form.get('filter') %}


<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-9">

        <h1 class="display-4">{{ translate("txt-organisation-no-financial-list") }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p>{{ translate("txt-organisation-no-financial-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <span class="input-group-btn">{{ formelement(form.get('submit')) }}</span></div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-condensed table-sm">
                <thead>
                <tr>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/organisation/financial/no-financial', 'criteria': 'name', 'text': translate('txt-name')} %}</a></th>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/organisation/financial/no-financial', 'criteria': 'country', 'text': translate('txt-country')} %}</a></th>
                    <th>{{ translate("txt-contacts") }}</th>
                    <th>{{ translate("txt-projects") }}</th>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/organisation/financial/no-financial', 'criteria': 'type', 'text': translate('txt-type')} %}</a></th>
                    <th>{{ translate("txt-actions") }}</th>
                </tr>
                </thead>
                <tfoot>
                </tfoot>
                <tbody>
                {% for organisation in paginator.getCurrentItems() %}
                    <tr>
                        <td>{{ organisationLink(organisation, 'view-admin', 'name') }}</td>
                        <td>{{ organisation.country.iso3 }}</td>
                        <td>{{ organisationService.getContactCount(organisation, constant("Contact\\Service\\ContactService::WHICH_ONLY_ACTIVE")) }}</td>
                        <td>{{ organisationService.getAffiliationCount(organisation, constant("Affiliation\\Service\\AffiliationService::WHICH_ONLY_ACTIVE")) }}</td>
                        <td>{{ organisation.getType().type }}</td>
                        <td>{{ organisationLink(organisation, 'edit', 'icon') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% include 'organisation/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-organisation-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-3">
        <div class="well well-sm">
            <fieldset>
                {{ ztbformelement(filter.get('type')) }}

                <div class="form-group row">
                    {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
                </div>
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}
