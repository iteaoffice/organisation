<h3>{{ translate("txt-project-doa") }}</h3>

<table class="table table-hover table-striped table-sm">
    <tr>
        <th>{{ translate("txt-doa-id") }}</th>
        <th>{{ translate("txt-signer") }}</th>
        <th>{{ translate("txt-date-signed") }}</th>
        <th>{{ translate("txt-project") }}</th>
        <th>{{ translate("txt-actions") }}</th>
    </tr>
    {% for doa in organisationDoa %}
        <tr>
            <td>{{ doaLink(doa,'view-admin','name') }}</td>
            <td>{{ contactLink(doa.contact,'view-admin','name') }}</td>
            <td>{% if doa.dateSigned %}{{ doa.dateSigned|string_date }}{% endif %}</td>
            <td>{{ projectLink(doa.affiliation.project,'view-admin','name') }}
                {{ projectLink(doa.affiliation.project,'view-community','icon') }}
            </td>
            <td>{{ doaLink(doa,'edit-admin','icon') }} {{ doaLink(doa,'download','icon') }} </td>
        </tr>
    {% endfor %}
</table>

