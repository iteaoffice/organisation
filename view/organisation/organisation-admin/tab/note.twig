<h2>{{ translate("txt-notes") }} {{ organisationNoteLink(null, organisation, 'new', 'button') }}</h2>

{% if organisation.note|length > 0 %}
    <table class="table table-striped table-hover table-condensed table-sm">
        <thead>
        <tr>
            <th>{{ translate('txt-date-created') }}</th>
            <th>{{ translate('txt-placed-by') }}</th>
            <th>{{ translate('txt-note') }}</th>
        </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
        {% for note in organisation.note %}
            <tr>
                <td>{{ note.dateCreated|string_date }} {{ organisationNoteLink(note, null, 'edit', 'icon') }}</td>
                <td>{{ contactLink(note.contact, 'view-admin', 'name') }}</td>
                <td>{{ note.note }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-no-notes-found"))|raw }}
{% endif %}