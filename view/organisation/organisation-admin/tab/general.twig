<h2>{{ translate("txt-general") }}</h2>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-name") }}</dt>
    <dd>{{ organisationService.organisation.organisation }}</dd>
    <dt>{{ translate("txt-description") }}</dt>
    <dd>{{ organisationService.organisation.description|raw }}</dd>
    <dt>{{ translate("txt-organisation-type") }}</dt>
    <dd>{{ organisationService.organisation.type }}</dd>
    <dt>{{ translate("txt-country") }}</dt>
    <dd>{{ organisationService.organisation.country }}</dd>
    <dt>{{ translate("txt-contacts") }}</dt>
    <dd>{{ organisationService.getContactCount(constant("Contact\\Service\\ContactService::WHICH_ONLY_ACTIVE")) }}
        (+{{ translate("txt-%s-expired")|format(organisationService.getContactCount(constant("Contact\\Service\\ContactService::WHICH_ONLY_EXPIRED"))) }}
        )
    </dd>
    <dt>{{ translate("txt-projects") }}</dt>
    <dd>{{ organisationService.getAffiliationCount(constant("Affiliation\\Service\\AffiliationService::WHICH_ONLY_ACTIVE")) }}</dd>
    <dt>{{ translate("txt-websites") }}</dt>
    {% for web in organisationService.organisation.web %}
        <dd><a href="{{ web.web }}">{{ web.web }}</a></dd>
    {% else %}
        <dd>{{ translate("txt-no-website-known") }}</dd>
    {% endfor %}
    <dt>{{ translate("txt-logo") }}</dt>
    <dd>{{ organisationLogo(organisationService,'view') }}</dd>
    {% if organisationService.organisation.getDateCreated() %}
        <dt>{{ translate("txt-date-created") }}</dt>
        <dd>{{ organisationService.organisation.getDateCreated()|string_date }}</dd>
    {% endif %}
    {% if organisationService.organisation.getDateUpdated() %}
        <dt>{{ translate("txt-last-update") }}</dt>
        <dd>{{ organisationService.organisation.getDateUpdated()|string_date }}</dd>
    {% endif %}
</dl>

