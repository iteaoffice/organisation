<h2>{{ translate("txt-financial") }}</h2>

<dl class="dl-horizontal">
    <dt>{{ translate("txt-debtor-number") }}</dt>
    <dd>{{ organisationService.parseDebtorNumber() }}</dd>
    <dt>{{ translate("txt-credit-number") }}</dt>
    <dd>{{ organisationService.parseCreditNumber() }}</dd>

    {% set financial = organisationService.organisation.financial %}

    {% if financial %}
        <dt>{{ translate("txt-vat-number") }}</dt>
        <dd>{{ financial.vat }}
            ({{ translate(financial.vatStatus(true)) }}
            - {{ translate("txt-checked-on-%s")|format(financial.dateVat|date("d-m-Y")) }})
        </dd>
        <dt>{{ translate("txt-omit-contact-on-invoice") }}</dt>
        <dd>{{ translate(financial.getOmitContact(true)) }}</dd>
        <dt>{{ translate("txt-invoice-via-email") }}</dt>
        <dd>{{ translate(financial.getEmail(true)) }}</dd>
        <dt>{{ translate("txt-require-purchace-order") }}</dt>
        <dd>{{ translate(financial.getRequiredPurchaseOrder(true)) }}</dd>
        <dt>{{ translate("txt-amount-of-invoices") }}</dt>
        <dd><a href="{{ url('zfcadmin/organisation/view',{'id': organisationService.organisation.id}) }}#invoices">{{ organisationService.organisation.invoice.count() }}</a></dd>
    {% else %}
        {{ ztbalert().info(translate("txt-no-financial-information-known-for-%s")|format(organsiationService.organisation))|raw }}
    {% endif %}
</dl>
