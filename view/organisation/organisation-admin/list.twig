{% do headTitle().append(translate("txt-organisation-list")) %}

{{ form().closeTag()|raw }}

{% do form.prepare() %}

{{ form().openTag(form)|raw }}

{% set filter = form.get('filter') %}


<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-9">

        <h1>{{ translate("txt-organisation-list") }} {{ organisationLink(null,'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-organisation-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <span class="input-group-btn">{{ formelement(form.get('submit')) }}</span></div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-condensed">
                <thead>
                <tr>
                    <th colspan="2">{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/organisation/list', 'criteria': 'name', 'text': translate('txt-name')} %}</th>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/organisation/list', 'criteria': 'country', 'text': translate('txt-country')} %}</th>
                    <th>{{ translate('txt-contacts') }}</th>
                    <th>{{ translate('txt-projects') }}</th>
                    <th>{{ translate('txt-parent') }}</th>
                    <th>{% include 'organisation/partial/sortable-table-header' with {'route': 'zfcadmin/organisation/list', 'criteria': 'type', 'text': translate('txt-type')} %}</th>
                    <th>{{ translate("txt-actions") }}</th>
                </tr>
                </thead>
                <tfoot>
                </tfoot>
                <tbody>
                {% for organisation in paginator.getCurrentItems() %}
                    <tr {% if organisation.parent %}class="info"{% endif %}>
                        <td>{% if organisation.parent %}<i class="fa fa-angle-double-up"
                                                           aria-hidden="true"></i>{% endif %}</td>
                        <td>{{ organisationLink(organisation, 'view-admin', 'name') }}
                            {% if organisation.parent %}
                                {{ parentLink(organisation.parent,'view','icon') }}
                            {% endif %}
                        </td>
                        <td>{{ countryLink(organisation.country,'view-admin','name') }}</td>
                        <td>{{ organisationService.getContactCount(organisation, constant("Contact\\Service\\ContactService::WHICH_ONLY_ACTIVE")) }}</td>
                        <td>{{ organisationService.getAffiliationCount(organisation, constant("Affiliation\\Service\\AffiliationService::WHICH_ONLY_ACTIVE")) }}</td>
                        <td>
                            {% if organisation.parentOrganisation %}
                                {{ parentLink(organisation.parentOrganisation.parent,'view','parent') }}
                            {% endif %}
                        </td>
                        <td>{{ organisation.getType().type }}</td>
                        <td>{{ organisationLink(organisation, 'edit', 'icon') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {% include 'organisation/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-organisation-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-3">
        <div class="well well-sm">
            <fieldset>
                {{ ztbformelement(filter.get('type')) }}
                {{ ztbformelement(filter.get('options')) }}

                <div class="form-group">
                    {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
                </div>
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}
